{
  "name": "sla-dev",
  "private": true,
  "workspaces": ["apps/*"],
  "packageManager": "pnpm@9.0.0",
  "engines": { "node": ">=18" },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -F ./apps/web dev",
    "start:api": "python api_server.py",
    "dev:web": "pnpm --filter @sla/web dev",
    "dev:mobile": "pnpm --filter @sla/mobile start",
    "build:web": "pnpm --filter @sla/web build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck"
  }
}