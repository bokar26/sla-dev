{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"]
    },
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "env.d.ts"],
  "exclude": ["dist", "node_modules"]
}